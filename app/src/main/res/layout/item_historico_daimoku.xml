<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/layout_default_offset_8"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_default_offset_4"
    tools:ignore="ContentDescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_item_historico_daimoku_duracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/text_size_20"
            tools:text="01:25:00" />

        <TextView
            android:id="@+id/tv_item_historico_daimoku_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_default_offset_16"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            tools:text="3 Mai 2020, 14:03" />


        <ImageView
            android:id="@+id/button_item_historico_daimoku_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_default_offset_4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/layout_default_offset_8"
            android:src="@drawable/ic_info"
            app:tint="@android:color/holo_blue_light" />

        <ImageView
            android:id="@+id/button_item_historico_daimoku_remover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_default_offset_4"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/layout_default_offset_8"
            android:src="@drawable/ic_remove"
            app:tint="@android:color/holo_blue_light" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_item_historico_daimoku_informacoes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/layout_default_offset_8"
        android:layout_marginVertical="@dimen/layout_default_offset_4"
        android:textStyle="italic"
        android:visibility="gone"
        tools:text="Aqui está uma breve descrição do campo Informações, onde serão escritos o que forem relacionados ao daimoku, como para quem foi direcionado, ou também se faz parte de uma rotina etc..."
        tools:visibility="visible" />

    <View
        android:id="@+id/divider_item_historico_daimoku"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/off_white" />

</LinearLayout>
